package Pacote;

public class Categoria {
	private String nomeCategoria;
	private int cor;

	public Categoria(String nomeCategoria, int cor) {
		this.nomeCategoria = nomeCategoria;
		this.cor = cor;
	}

	public String getCategoria() {
		return nomeCategoria;
	}

	public int getCor() {
		return cor;
	}
	
	public void editarNomeDaCategoria(String novoNomeCategoria) {
		nomeCategoria = novoNomeCategoria;
	}
	
	public void editarCorDaCategoria(int novaCor) {
		cor = novaCor;
	}
}
